clock{
  timezone CST+6CDT;
  timestamp '2000-01-01 6:00:00';
  stoptime '2000-01-01 15:00:00';
}

module connection;
module climate;
module generators;
module residential;
module tape;

#ifdef USE_FNCS
#define USING_AGENT=1
#endif
#ifdef USE_HELICS
#define USING_AGENT=1
#endif

object climate {
  name exampleWeather;
  interpolate QUADRATIC;
#ifdef USING_AGENT
	latitude 32.900;
	longitude -97.017;
//  altitude 171.0;
  tz_meridian -90.0;
  temperature 44.06;
  humidity 0.60;
  solar_direct 0.0;
  solar_diffuse 0.0;
  pressure 1002.0;
  wind_speed 10.2921;
#else
  tmyfile "${TMY3_PATH}/TX-Dallasfort_Worth_Intl_Ap.tmy3";
#endif
};
object solar {
	name solarGenerator;
	weather exampleWeather;
    panel_type SINGLE_CRYSTAL_SILICON;
	orientation FIXED_AXIS;
    efficiency 0.2;
    area 2500 sf;
}

object house {
	name weatherHouse;
}

#ifdef USE_FNCS
object fncs_msg {
  name gridlabdweatheragent;
  configure weather_gridlabd.txt;
  option "transport:hostname localhost, port 5570";
}
#endif

#ifdef USE_HELICS
object helics_msg {
  name gridlabdweatheragent;
  configure helics_gld.json;
}
#endif

object recorder{
	parent exampleWeather;
	property temperature,humidity,solar_direct,solar_diffuse,pressure,wind_speed,solar_azimuth,solar_elevation,solar_zenith;
	interval 300;
#ifdef USING_AGENT
	file climate_agent.csv;
#else
	file climate_tmy3.csv;
#endif
};
object recorder{
	parent solarGenerator;
	property Insolation,wind_speed,Tmodule,Tambient,NOCT;
	interval 300;
#ifdef USING_AGENT
	file generator_agent.csv;
#else
	file generator_tmy3.csv;
#endif
};
object recorder{
	parent weatherHouse;
	property solar_gain,incident_solar_radiation,horizontal_diffuse_solar_radiation,outdoor_temperature,outdoor_rh;
	interval 300;
#ifdef USING_AGENT
	file house_agent.csv;
#else
	file house_tmy3.csv;
#endif
};